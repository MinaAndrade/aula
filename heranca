class Animal:
    def __init__(self, tipo, sexo, pelagem):
        self.__tipo = tipo
        self.__sexo = sexo
        self.__pelagem = pelagem

    @property
    def tipo(self):
        return self.__tipo = tipo
        
    def comer(self):
        return 'Comendo'

    def dormir(self):
        return 'Dormindo'
    
class Cachorro(Animal):
    '''def __init__(self, tipo, sexo, pelagem, raca):
        super().__init__(tipo, sexo, pelagem)'''
        
    def latir(self):
        return 'Au Au'
    
class Gato(Animal):
    def miar(self):
        return 'Miau Miau'
        
dog = Cachorro()

print(f'{self.tipo})

print('Meu cachorro está', dog.comer(), 'e depois ele faz ', dog.latir())

cat = Gato()

print('\nMeu gato está', cat.dormir(), 'e depois ele faz ', cat.miar())
