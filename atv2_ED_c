#include <stdio.h>

int main(){
	struct Pessoa {
		char nome[50];
		int idade;
		char endereco[100];
	};
	
	int opcao, i, num = 2;
	
	struct Pessoa p1[num];
		
	printf("\nDigite a opcao desejada:\n1 - Registro\n2 - Mostrar dados salvos\n");
	printf("Digite -1 para sair do sistema.\n");
	scanf("%d", &opcao);
	
	while (opcao != -1){
		if (opcao == 1){
			printf("\nDigite quantas pessoas quer cadastrar: \n");
			scanf("%d", &num);
			printf("Obs: Ate %d registros\n", num);
			
			for (i = 0; i < num; i++){
				printf("\nDigite os dados da %da pessoa: \n", i+1);
				printf("Digite seu nome: ");
				scanf("%s", &p1[i].nome);
				printf("Digite sua idade: ");
				scanf("%d", &p1[i].idade);
				printf("Digite seu endereço: ");
				scanf("%s", &p1[i].endereco);	
			}
		}
		else if (opcao == 2){
			for (i = 0; i < num; i++){
				printf("\nDados da %da Pessoa: \n", i+1);
				printf("Nome: %s\n", p1[i].nome);
				printf("Idade: %d\n", p1[i].idade);
				printf("Endereco: %s\n\n", p1[i].endereco);
			}
		}
		else{
			printf("Opção inválida!");
		}
		printf("\nDigite a opção desejada:\n1 - Registro\n2 - Mostrar dados salvos\n");
		printf("Obs: Ate %d registros\n", num);
		printf("Digite -1 para sair do sistema.\n");
		scanf("%d", &opcao);
	}
}
